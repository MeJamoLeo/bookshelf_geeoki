  <div class="wrapper-books">
    <div class="container">
    <div class="books-title">
        <h2 style="display:inline-block;">Books List</h2>
        <a 
        class="btn-floating btn-large waves-effect waves-light red"
        style="float: right;
              margin-top: 3rem;
              margin-right: 3rem;"
        href='/books/new'>
              <i class="material-icons">add</i></a>
    </div>
      <div class="row">
      <% @books.each do |book| %>
        <div class="col s4 offset-s1 m3 offset-m1 l2 offset-l1 card">
          <div
            class="card-title card-image waves-effect waves-block waves-light"
          >
            <img
              class="activator"
              src= <%= book.thumbnail %>
            />
          </div>
          <div class="card-content">
            <span class="grey-text text-darken-4">
              <%= book.title %>
            </span>
                <p><a href="#">
              <% @authoers.where(book_id: book.id).each do |authoer|%>
                  <%= authoer.name %>
              <% end %>
              </a></p>
          </div>
          <div class="card-tags">
            <a href="">
              <div class="chip">
                Tag
              </div>
            </a>
            <a href="">
              <div class="chip">
                ビジネス
              </div>
            </a>
            <a href="">
              <div class="chip">
                像
              </div>
            </a>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>