
<div class="container">
  <div class="book-info">
    <div class="row" style="position: relative;">
      <div class="col l2 offset-l1 m3 s12 info-img">
      <% if @book.thumbnail%>
        <img class="activator" src=<%= @book.thumbnail %> />
      <%else%>
        <img class="activator" src="/images/no_image.webp"/>
      <%end%>
      </div>
      <div class="col l6 offset-l1 m6 offset-m1 s12 info-text">
        <h2 style="font-size:3rem;"><%= @book.title %></h2>
        <% @authoers.each do |authoer| %>
        <a style="font-size: 1.5rem;">
          <%= authoer.name %>
        </a>
        <% end %>
        <p><%= @book.description %></p>

        <%# タグをパーツとして使いたい %>
        <div class="card-tags" style="font-size: 2rem;">
          <% @book.tags.each do |tag| %>
          <a href="" style="position: relative;">
            <div class="chip" style="">
              <%= tag.tag_name %>
            </div>
          </a>
          <% end %>
        </div>
        <div class="info-owner row">
          <form action="/books/request" method="post" style="padding:1.5rem">
            <div class="input-field col s12 m6">
              <select>
                <option value="" disabled selected>Choose owner</option>
                <% @users.each do |user|%>
                <option value="1"><%= user.name%></option>
                <% end%>
              </select>
            </div>

            <div class="col s12 m6 book-status">
              <div class="right-align">
                <input type="hidden" name="book_id" id="book_id" value=<%=
                @book.id %>>
                <button
                  class="btn waves-effect waves-light"
                  type="submit"
                  name="action"
                >
                  リクエスト
                  <i class="material-icons">send</i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
